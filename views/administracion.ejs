    <script
      src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"
      integrity="sha384-YvpcrYf0tY3lHB60NNkmXc5s9fDVZLESaAA55NDzOxhy9GkcIdslK1eN7N6jIeHz"
      crossorigin="anonymous"
    ></script>
    <script>
      const usuarioForm = document.getElementById('usuario-form');
      const usuariosTableBody = document.querySelector('#usuarios-table tbody');
      const usuarioMedicoSelect = document.getElementById('usuario-medico');
      const usuariosRefreshBtn = document.getElementById('usuarios-refresh');
      const usuarioModalEl = document.getElementById('usuarioModal');
      const usuarioModal = new bootstrap.Modal(usuarioModalEl);
      const usuarioModalForm = document.getElementById('usuario-modal-form');
      const usuarioModalMedicoSelect = document.getElementById('usuario-modal-medico');

      const medicoForm = document.getElementById('medico-form');
      const medicosTableBody = document.querySelector('#medicos-table tbody');
      const medicosRefreshBtn = document.getElementById('medicos-refresh');
      const medicoModalEl = document.getElementById('medicoModal');
      const medicoModalInstance = new bootstrap.Modal(medicoModalEl);
      const medicoModalForm = document.getElementById('medico-modal-form');

      let medicosCache = [];
      let usuariosCache = [];

      function optionFromMedico(medico) {
        const nombreCompleto = [
          medico.primer_nombre,
          medico.segundo_nombre,
          medico.apellido_paterno,
          medico.apellido_materno,
        ]
          .filter(Boolean)
          .join(' ');
        return `${nombreCompleto} (ID ${medico.id})`;
      }

      function fillMedicoSelects() {
        const selects = [usuarioMedicoSelect, usuarioModalMedicoSelect];
        selects.forEach((select) => {
          const selectedValue = select.value;
          select.innerHTML = '<option value="">Sin asociación</option>';
          medicosCache.forEach((medico) => {
            const option = document.createElement('option');
            option.value = medico.id;
            option.textContent = optionFromMedico(medico);
            select.append(option);
          });
          if (selectedValue) {
            select.value = selectedValue;
          }
        });
      }

      function renderUsuarios() {
        if (!usuariosCache.length) {
          usuariosTableBody.innerHTML = `
            <tr>
              <td colspan="6" class="text-center text-muted">Sin usuarios registrados.</td>
            </tr>
          `;
          return;
        }

        usuariosTableBody.innerHTML = usuariosCache
          .map((usuario) => {
            const medico = usuario.medico_nombre ? `${usuario.medico_nombre} (ID ${usuario.id_medico})` : 'Sin asociación';
            const activo = usuario.activo ? '<span class="badge bg-success">Activo</span>' : '<span class="badge bg-secondary">Inactivo</span>';
            return `
              <tr>
                <th scope="row">${usuario.id}</th>
                <td>${usuario.correo}</td>
                <td>${usuario.nombre_completo}</td>
                <td>${medico}</td>
                <td>${activo}</td>
                <td class="text-center">
                  <div class="btn-group btn-group-sm" role="group">
                    <button class="btn btn-outline-primary" data-action="editar" data-id="${usuario.id}">Editar</button>
                    <button class="btn btn-outline-danger" data-action="eliminar" data-id="${usuario.id}">Eliminar</button>
                  </div>
                </td>
              </tr>
            `;
          })
          .join('');
      }

      function renderMedicos() {
        if (!medicosCache.length) {
          medicosTableBody.innerHTML = `
            <tr>
              <td colspan="7" class="text-center text-muted">Sin médicos registrados.</td>
            </tr>
          `;
          return;
        }

        medicosTableBody.innerHTML = medicosCache
          .map((medico) => {
            const activo = medico.activo ? '<span class="badge bg-success">Activo</span>' : '<span class="badge bg-secondary">Inactivo</span>';
            return `
              <tr>
                <th scope="row">${medico.id}</th>
                <td>${optionFromMedico(medico)}</td>
                <td>${medico.cedula}</td>
                <td>${medico.especialidad}</td>
                <td>${medico.telefono}</td>
                <td>${activo}</td>
                <td class="text-center">
                  <div class="btn-group btn-group-sm" role="group">
                    <button class="btn btn-outline-primary" data-action="editar" data-id="${medico.id}">Editar</button>
                    <button class="btn btn-outline-danger" data-action="eliminar" data-id="${medico.id}">Eliminar</button>
                  </div>
                </td>
              </tr>
            `;
          })
          .join('');
      }

      async function loadUsuarios() {
        try {
          usuariosRefreshBtn.disabled = true;
          const response = await fetch('/api/usuarios');
          if (!response.ok) throw new Error('No se pudieron obtener los usuarios');
          usuariosCache = await response.json();
          renderUsuarios();
        } catch (error) {
          console.error(error);
          usuariosTableBody.innerHTML = `
            <tr>
              <td colspan="6" class="text-center text-danger">${error.message}</td>
            </tr>
          `;
        } finally {
          usuariosRefreshBtn.disabled = false;
        }
      }

      async function loadMedicos() {
        try {
          medicosRefreshBtn.disabled = true;
          const response = await fetch('/api/medicos');
          if (!response.ok) throw new Error('No se pudieron obtener los médicos');
          medicosCache = await response.json();
          renderMedicos();
          fillMedicoSelects();
        } catch (error) {
          console.error(error);
          medicosTableBody.innerHTML = `
            <tr>
              <td colspan="7" class="text-center text-danger">${error.message}</td>
            </tr>
          `;
        } finally {
          medicosRefreshBtn.disabled = false;
        }
      }

      usuarioForm.addEventListener('submit', async (event) => {
        event.preventDefault();
        if (!usuarioForm.checkValidity()) {
          usuarioForm.classList.add('was-validated');
          return;
        }

        const payload = {
          correo: document.getElementById('usuario-correo').value.trim(),
          password: document.getElementById('usuario-password').value.trim(),
          nombre_completo: document.getElementById('usuario-nombre').value.trim(),
          id_medico: usuarioMedicoSelect.value || null,
          activo: document.getElementById('usuario-activo').checked,
        };

        try {
          const response = await fetch('/api/usuarios', {
            method: 'POST',
            headers: { 'Content-Type': 'application/json' },
            body: JSON.stringify(payload),
          });

          if (!response.ok) {
            const errorBody = await response.json().catch(() => ({}));
            throw new Error(errorBody.message || 'No se pudo registrar el usuario');
          }

          usuarioForm.reset();
          usuarioForm.classList.remove('was-validated');
          await loadUsuarios();
        } catch (error) {
          alert(error.message);
        }
      });

      usuariosTableBody.addEventListener('click', async (event) => {
        const target = event.target.closest('button[data-action]');
        if (!target) return;
        const id = target.getAttribute('data-id');
        const action = target.getAttribute('data-action');
        const usuario = usuariosCache.find((item) => String(item.id) === id);
        if (!usuario) return;

        if (action === 'eliminar') {
          if (!confirm('¿Deseas eliminar este usuario?')) return;
          try {
            const response = await fetch(`/api/usuarios/${id}`, { method: 'DELETE' });
            if (!response.ok) {
              const errorBody = await response.json().catch(() => ({}));
              throw new Error(errorBody.message || 'No se pudo eliminar el usuario');
            }
            await loadUsuarios();
          } catch (error) {
            alert(error.message);
          }
          return;
        }

        if (action === 'editar') {
          document.getElementById('usuario-modal-id').value = usuario.id;
          document.getElementById('usuario-modal-correo').value = usuario.correo;
          document.getElementById('usuario-modal-password').value = usuario.password;
          document.getElementById('usuario-modal-nombre').value = usuario.nombre_completo;
          usuarioModalMedicoSelect.value = usuario.id_medico ?? '';
          document.getElementById('usuario-modal-activo').checked = Boolean(usuario.activo);
          usuarioModal.show();
        }
      });

      usuarioModalForm.addEventListener('submit', async (event) => {
        event.preventDefault();
        if (!usuarioModalForm.checkValidity()) {
          usuarioModalForm.classList.add('was-validated');
          return;
        }

        const id = document.getElementById('usuario-modal-id').value;
        const payload = {
          correo: document.getElementById('usuario-modal-correo').value.trim(),
          password: document.getElementById('usuario-modal-password').value.trim(),
          nombre_completo: document.getElementById('usuario-modal-nombre').value.trim(),
          id_medico: usuarioModalMedicoSelect.value || null,
          activo: document.getElementById('usuario-modal-activo').checked,
        };

        try {
          const response = await fetch(`/api/usuarios/${id}`, {
            method: 'PUT',
            headers: { 'Content-Type': 'application/json' },
            body: JSON.stringify(payload),
          });

          if (!response.ok) {
            const errorBody = await response.json().catch(() => ({}));
            throw new Error(errorBody.message || 'No se pudo actualizar el usuario');
          }

          usuarioModal.hide();
          usuarioModalForm.classList.remove('was-validated');
          await loadUsuarios();
        } catch (error) {
          alert(error.message);
        }
      });

      medicoForm.addEventListener('submit', async (event) => {
        event.preventDefault();
        if (!medicoForm.checkValidity()) {
          medicoForm.classList.add('was-validated');
          return;
        }

        const payload = {
          primer_nombre: document.getElementById('medico-primer-nombre').value.trim(),
          segundo_nombre: document.getElementById('medico-segundo-nombre').value.trim(),
          apellido_paterno: document.getElementById('medico-apellido-paterno').value.trim(),
          apellido_materno: document.getElementById('medico-apellido-materno').value.trim(),
          cedula: document.getElementById('medico-cedula').value.trim(),
          telefono: document.getElementById('medico-telefono').value.trim(),
          especialidad: document.getElementById('medico-especialidad').value.trim(),
          email: document.getElementById('medico-email').value.trim(),
          activo: document.getElementById('medico-activo').checked,
        };

        try {
          const response = await fetch('/api/medicos', {
            method: 'POST',
            headers: { 'Content-Type': 'application/json' },
            body: JSON.stringify(payload),
          });

          if (!response.ok) {
            const errorBody = await response.json().catch(() => ({}));
            throw new Error(errorBody.message || 'No se pudo registrar el médico');
          }

          medicoForm.reset();
          medicoForm.classList.remove('was-validated');
          await loadMedicos();
        } catch (error) {
          alert(error.message);
        }
      });

      medicosTableBody.addEventListener('click', async (event) => {
        const target = event.target.closest('button[data-action]');
        if (!target) return;
        const id = target.getAttribute('data-id');
        const action = target.getAttribute('data-action');
        const medico = medicosCache.find((item) => String(item.id) === id);
        if (!medico) return;

        if (action === 'eliminar') {
          if (!confirm('¿Deseas eliminar este médico?')) return;
          try {
            const response = await fetch(`/api/medicos/${id}`, { method: 'DELETE' });
            if (!response.ok) {
              const errorBody = await response.json().catch(() => ({}));
              throw new Error(errorBody.message || 'No se pudo eliminar el médico');
            }
            await loadMedicos();
            await loadUsuarios();
          } catch (error) {
            alert(error.message);
          }
          return;
        }

        if (action === 'editar') {
          document.getElementById('medico-modal-id').value = medico.id;
          document.getElementById('medico-modal-primer-nombre').value = medico.primer_nombre ?? '';
          document.getElementById('medico-modal-segundo-nombre').value = medico.segundo_nombre ?? '';
          document.getElementById('medico-modal-apellido-paterno').value = medico.apellido_paterno ?? '';
          document.getElementById('medico-modal-apellido-materno').value = medico.apellido_materno ?? '';
          document.getElementById('medico-modal-cedula').value = medico.cedula ?? '';
          document.getElementById('medico-modal-telefono').value = medico.telefono ?? '';
          document.getElementById('medico-modal-especialidad').value = medico.especialidad ?? '';
          document.getElementById('medico-modal-email').value = medico.email ?? '';
          document.getElementById('medico-modal-activo').checked = Boolean(medico.activo);
          medicoModalInstance.show();
        }
      });

      medicoModalForm.addEventListener('submit', async (event) => {
        event.preventDefault();
        if (!medicoModalForm.checkValidity()) {
          medicoModalForm.classList.add('was-validated');
          return;
        }

        const id = document.getElementById('medico-modal-id').value;
        const payload = {
          primer_nombre: document.getElementById('medico-modal-primer-nombre').value.trim(),
          segundo_nombre: document.getElementById('medico-modal-segundo-nombre').value.trim(),
          apellido_paterno: document.getElementById('medico-modal-apellido-paterno').value.trim(),
          apellido_materno: document.getElementById('medico-modal-apellido-materno').value.trim(),
          cedula: document.getElementById('medico-modal-cedula').value.trim(),
          telefono: document.getElementById('medico-modal-telefono').value.trim(),
          especialidad: document.getElementById('medico-modal-especialidad').value.trim(),
          email: document.getElementById('medico-modal-email').value.trim(),
          activo: document.getElementById('medico-modal-activo').checked,
        };

        try {
          const response = await fetch(`/api/medicos/${id}`, {
            method: 'PUT',
            headers: { 'Content-Type': 'application/json' },
            body: JSON.stringify(payload),
          });

          if (!response.ok) {
            const errorBody = await response.json().catch(() => ({}));
            throw new Error(errorBody.message || 'No se pudo actualizar el médico');
          }

          medicoModalInstance.hide();
          medicoModalForm.classList.remove('was-validated');
          await loadMedicos();
          await loadUsuarios();
        } catch (error) {
          alert(error.message);
        }
      });

      usuariosRefreshBtn.addEventListener('click', loadUsuarios);
      medicosRefreshBtn.addEventListener('click', loadMedicos);

      loadMedicos();
      loadUsuarios();
    </script>
  </body>
</html>
